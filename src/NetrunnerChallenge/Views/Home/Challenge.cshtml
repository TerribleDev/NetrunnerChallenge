@model NetrunnerChallenge.Models.ChallengeResultViewModel

@{
    ViewBag.Title = "title";
}

<h2 class="text-center">@Model.Challenge.Faction.FactionName</h2>
<hr/>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-1"></div>
        @foreach (var card in Model.Cards)
        {
            <div class="col-sm-2">
                <div class="row">
                    <div class="col-sm-12">
                        <img src="@string.Format("http://netrunnerdb.com{0}", card.Imagesrc)" class="img-responsive"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <span class="center-this"><b>@card.Title</b></span>
                    </div>
                </div>
            </div>
        }
        <div class="col-sm-1"></div>
    </div>
    <div class="row" style="margin-top: 60px">
        <div class=" col-md-offset-4 col-md-6">
            <form class="form-inline">
                <div class="form-group">
                    <label for="share">Share With Your Friends:</label>
                    <input type="text" class="form-control" id="share" value="@Url.Action("Challenge", "Home", new {id=Model.Challenge.Id}, Request.Url.Scheme)" placeholder="Share With Your Friend">
                </div>
            </form>
        </div>
    </div>
</div>